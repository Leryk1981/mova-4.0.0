{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.mova_agent_task_execute_v1.schema.json",
  "title": "env.mova_agent_task_execute_v1",
  "description": "Envelope for requesting agent execution on a task under explicit policy and determinism controls.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.mova_agent_task_execute_v1"
    },
    "verb": {
      "type": "string",
      "const": "execute"
    },
    "roles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "requester": {
          "type": "string"
        },
        "executor": {
          "type": "string"
        }
      },
      "required": [
        "requester",
        "executor"
      ]
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "task_id": {
          "type": "string",
          "minLength": 1
        },
        "intent_text": {
          "type": "string",
          "minLength": 1
        },
        "success_definition": {
          "type": "string",
          "minLength": 1
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "input_refs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "task_id",
        "intent_text",
        "success_definition"
      ]
    },
    "agent_profile_ref": {
      "type": "string",
      "minLength": 1
    },
    "policy_profile_ref": {
      "type": "string",
      "minLength": 1
    },
    "determinism": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "seed": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0
        },
        "replay_mode": {
          "type": "boolean"
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "task",
    "agent_profile_ref",
    "policy_profile_ref"
  ]
}
