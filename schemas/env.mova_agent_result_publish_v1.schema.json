{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.mova_agent_result_publish_v1.schema.json",
  "title": "env.mova_agent_result_publish_v1",
  "description": "Envelope for publishing agent execution result to requester, registry, or verifier.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.mova_agent_result_publish_v1"
    },
    "verb": {
      "type": "string",
      "const": "publish"
    },
    "roles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "executor": {
          "type": "string"
        },
        "receiver": {
          "type": "string"
        }
      },
      "required": [
        "executor",
        "receiver"
      ]
    },
    "result": {
      "$ref": "https://mova.dev/schemas/ds.mova_agent_execution_result_core_v1.schema.json"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "result"
  ]
}
