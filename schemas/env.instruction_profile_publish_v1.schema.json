{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.instruction_profile_publish_v1.schema.json",
  "title": "env.instruction_profile_publish_v1",
  "description": "Envelope for publishing a MOVA instruction profile to an executor or guard.",
  "type": "object",
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.instruction_profile_publish_v1"
    },
    "verb": {
      "type": "string",
      "const": "publish"
    },
    "roles": {
      "type": "object",
      "properties": {
        "publisher": {
          "type": "string"
        },
        "executor": {
          "type": "string"
        }
      },
      "required": [
        "publisher",
        "executor"
      ],
      "additionalProperties": false
    },
    "profile": {
      "$ref": "https://mova.dev/schemas/ds.instruction_profile_core_v1.schema.json"
    },
    "meta": {
      "type": "object",
      "description": "Optional metadata: correlation ids, timestamps, etc.",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "profile"
  ],
  "additionalProperties": false
}
