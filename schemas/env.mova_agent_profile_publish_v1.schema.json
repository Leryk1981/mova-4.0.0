{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.mova_agent_profile_publish_v1.schema.json",
  "title": "env.mova_agent_profile_publish_v1",
  "description": "Envelope for publishing or updating a core agent contract profile.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "envelope_id": {
      "type": "string",
      "const": "env.mova_agent_profile_publish_v1"
    },
    "verb": {
      "type": "string",
      "const": "publish"
    },
    "roles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "publisher": {
          "type": "string"
        },
        "registry": {
          "type": "string"
        }
      },
      "required": [
        "publisher",
        "registry"
      ]
    },
    "agent_profile": {
      "$ref": "https://mova.dev/schemas/ds.mova_agent_contract_core_v1.schema.json"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "envelope_id",
    "verb",
    "roles",
    "agent_profile"
  ]
}
